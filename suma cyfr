#include <iostream>
#include <cmath>
using namespace std;

int main()

{

    int n, s=0;
    cout<<"Podaj liczb natur";
    cin >>n;


    while (n/10>0)

    {
        s=0;
        while(n>0)
        {  
         (if ((n%10) = 1);)
            s=s + n%10;
            n/=10;
        }
           cout << "suma cyfr wynosi "<< s << endl;
        n=s;
    }
    return 0;

}
